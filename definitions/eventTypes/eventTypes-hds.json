{
  "version": "1.0.0",
  "types": {
    "vulva-mucus-inspect/v0": {
      "description": "Cervical Fluid Inspect",
      "type": "string",
      "enum": [
        "clear",
        "creamy",
        "dry-sticky",
        "egg-white"
      ]
    },
    "contact/country": {
      "description": "Country",
      "type": "string"
    },
    "contact/name": {
      "description": "Name",
      "type": "string"
    },
    "contact/surname": {
      "description": "Surname",
      "type": "string"
    },
    "reproductive-sexuality/detailed": {
      "description": "Potentially reproductive sexual activity",
      "type": "string",
      "enum": [
        "fertile",
        "incomplete",
        "withdrawal",
        "condom",
        "cervical-barrier"
      ]
    },
    "pregnancy/detailed": {
      "description": "Pregnancy. The value of `event.time` should indicate the start of pregnancy. When content value is 'ongoing' `event.duration` must be set to `null`. For any other value `event.duration` should be set to indicate when the pregnancy state terminated.",
      "type": "string",
      "enum": [
        "ongoing",
        "miscarriage",
        "ectopic",
        "stillbirth",
        "livebirth",
        "abortion"
      ]
    },
    "medication/basic": {
      "description": "Simple medication based on name and eventual coding",
      "type": "object",
      "required": ["label"],
      "properties": {
        "name": {
          "description": "The name of product",
          "type": "string"
        },
        "doseMg": {
          "description": "The dosage in milligrams",
          "type": "number"
        },
        "frequencyHours": {
          "description": "Frequency in Hours. If non null, 'event.duration' should reflect the full period, otherwise it reflects one intake",
          "type": "number"
        },
        "codes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["system", "content"],
            "properties": {
              "system": {
                "description": "The system code for HDS",
                "type": "string"
              },
              "content": {
                "description": "Accordingly to the norm, appropriate content for coding",
                "type": "object"
              }
            }
          }
        }
      }
    } 
  },
  "extras": {}
}